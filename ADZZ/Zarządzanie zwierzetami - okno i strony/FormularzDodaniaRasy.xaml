<Window x:Class="ADZZ.Zarządzanie_zwierzetami___okno_i_strony.FormularzDodaniaRasy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADZZ.Zarządzanie_zwierzetami___okno_i_strony"
        mc:Ignorable="d"
        Title="Dodaj nową rasę" Height="115" Width="210"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lbNazwaKategorii" Content="Nazwa:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNazwaRasy" HorizontalAlignment="Left" Height="23" Margin="63,13,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button Style="{StaticResource NowyStylButton}" x:Name="btnDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="108,45,0,0" VerticalAlignment="Top" Width="75" Click="btnDodaj_Click"/>

    </Grid>
</Window>

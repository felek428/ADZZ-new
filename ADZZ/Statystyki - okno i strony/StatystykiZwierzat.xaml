<Page x:Class="ADZZ.Statystyki___okno_i_strony.StatystykiZwierzat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADZZ.Statystyki___okno_i_strony"
      xmlns:Charts="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="StatystykiZwierzat">

    <Grid>
        <ComboBox x:Name="cbRodzajStatystyk" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbRodzajStatystyk_SelectionChanged"/>
        <Charts:Chart x:Name="WykresKolumnowy" Margin="0,37,0,0" BorderThickness="0" Visibility="Hidden">
            <Charts:Chart.Series >
                <Charts:ColumnSeries  x:Name="SeriaCol" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" />
                <!--Wykres slupkowy-->
                
            </Charts:Chart.Series>
        </Charts:Chart>
        <Charts:Chart x:Name="WykresKolowy" Margin="0,37,0,0" BorderThickness="0" Visibility="Hidden">
            <Charts:Chart.Series >
                <Charts:PieSeries x:Name="SeriaPie" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" ItemsSource="{Binding points}"/>

                <!--Wykres slupkowy-->

            </Charts:Chart.Series>
        </Charts:Chart>
    </Grid>
</Page>

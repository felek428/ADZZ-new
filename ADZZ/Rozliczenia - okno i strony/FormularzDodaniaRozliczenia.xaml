<Page x:Class="ADZZ.Rozliczenia___okno_i_strony.FormularzDodaniaRozliczenia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADZZ.Rozliczenia___okno_i_strony"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormularzDodaniaRozliczenia">

    <Grid Background="White">
        <Label x:Name="typRozliczeniaL" Content="Typ rozliczenia:" HorizontalAlignment="Left" Margin="45,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="WyborRozliczenia" HorizontalAlignment="Left" Margin="141,24,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBox x:Name="tbKwota" HorizontalAlignment="Left" Height="23" Margin="141,55,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="kwotaL" Content="Kwota:" HorizontalAlignment="Left" Margin="45,52,0,0" VerticalAlignment="Top"/>
        <Label x:Name="opisL" Content="Opis:" HorizontalAlignment="Left" Margin="45,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbOpis" HorizontalAlignment="Left" Height="97" Margin="141,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289"/>
        <Button x:Name="BtDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="355,202,0,0" VerticalAlignment="Top" Width="75" Click="BtDodaj_Click"/>

    </Grid>
</Page>

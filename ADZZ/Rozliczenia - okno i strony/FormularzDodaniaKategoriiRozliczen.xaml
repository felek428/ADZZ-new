<Window x:Class="ADZZ.Rozliczenia___okno_i_strony.FormularzDodaniaKategoriiRozliczen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADZZ.Rozliczenia___okno_i_strony"
        mc:Ignorable="d"
        Title="Dodaj nową kategorię" Height="145" Width="270" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lbNazwaKategorii" Content="Nazwa:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNazwaKategorii" HorizontalAlignment="Left" Height="23" Margin="132,13,0,0"  VerticalAlignment="Top" Width="120"/>
        <Button Style="{StaticResource NowyStylButton}" x:Name="btnDodaj" Content="Dodaj" HorizontalAlignment="Left" Margin="177,75,0,0" VerticalAlignment="Top" Width="75" Click="btnDodaj_Click"/>
        <Label x:Name="lbCzyPrzychod" Content="Przychód/Wydatek:" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbCzyPrzychod" HorizontalAlignment="Left" Margin="132,43,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
